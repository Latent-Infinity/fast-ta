{
  "name": "MACD Lookback Period",
  "description": "Verify MACD output length matches lookback formula",
  "indicator": "macd",
  "rationale": "PRD ยง4.4: MACD line lookback = slow - 1, Signal lookback = slow + signal - 2",
  "test_cases": [
    {
      "name": "standard_12_26_9",
      "params": {"fast_period": 12, "slow_period": 26, "signal_period": 9},
      "expected_macd_lookback": 25,
      "expected_signal_lookback": 33,
      "expected_min_len": 34,
      "notes": "MACD lookback = 26-1 = 25, Signal lookback = 26+9-2 = 33"
    },
    {
      "name": "custom_5_13_4",
      "params": {"fast_period": 5, "slow_period": 13, "signal_period": 4},
      "expected_macd_lookback": 12,
      "expected_signal_lookback": 15,
      "expected_min_len": 16,
      "notes": "MACD lookback = 13-1 = 12, Signal lookback = 13+4-2 = 15"
    }
  ]
}
