{
  "project_type": "single",
  "services": {
    "main": {
      "path": ".",
      "tech_stack": ["rust", "criterion"],
      "language": "Rust",
      "framework": null,
      "dev_command": "cargo build --workspace",
      "test_command": "cargo test --workspace",
      "bench_command": "cargo bench --workspace"
    }
  },
  "infrastructure": {
    "docker": false,
    "database": null,
    "ci_cd": false
  },
  "conventions": {
    "linter": "clippy",
    "formatter": "rustfmt",
    "testing": "cargo test",
    "benchmarking": "criterion"
  },
  "crates": {
    "fast-ta-core": {
      "path": "crates/fast-ta-core",
      "type": "library",
      "description": "Core indicators, kernels, and plan infrastructure"
    },
    "fast-ta-experiments": {
      "path": "crates/fast-ta-experiments",
      "type": "benchmark",
      "description": "E01-E07 experiment benchmarks using Criterion"
    }
  },
  "experiments": {
    "E01": {
      "name": "Baseline Cost Benchmarks",
      "benchmark": "e01_baseline",
      "target": "O(n) complexity verification"
    },
    "E02": {
      "name": "RunningStat Fusion",
      "benchmark": "e02_running_stat",
      "target": "≥20% speedup"
    },
    "E03": {
      "name": "EMA Fusion",
      "benchmark": "e03_ema_fusion",
      "target": "≥15% speedup for ≥10 EMAs"
    },
    "E04": {
      "name": "Rolling Extrema",
      "benchmark": "e04_rolling_extrema",
      "target": "≥5× speedup at k≥50"
    },
    "E05": {
      "name": "Plan Overhead",
      "benchmark": "e05_plan_overhead",
      "target": "<100 executions break-even"
    },
    "E06": {
      "name": "Memory Writes",
      "benchmark": "e06_memory_writes",
      "target": "≥10% improvement"
    },
    "E07": {
      "name": "End-to-End",
      "benchmark": "e07_end_to_end",
      "target": "≥1.5× speedup for ≥20 indicators"
    }
  }
}
